/* pages/user/index.wxss */
/* 头像 */
.header {
  width: 100%;
  height: 220rpx;
  background: #FB5152;
  border-radius: 0 0 50rpx 0;
  display: flex;
  justify-content: start;
  align-items: center;
}
.header .left {
  margin-left: 50rpx;
  margin-right: 10rpx;
  width: 220rpx;
  height: 220rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header .left .image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  box-shadow: 0 0 50rpx rgb(219, 219, 219);
  overflow: hidden;
}
/* 姓名 */
.header .right {
  height: 110rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: white;
}
.header .right .name {
  font-size: 18px;
  font-weight: bolder;
}
.header .right .vip {
  display: flex;
  justify-content: start;
  align-items: center;
}
.header .right .vip image {
  width: 38rpx;
  height: 38rpx;
}

.header .right .vip text {
  font-size: 16px;
  margin-left: 20rpx;
}
/* list */
.title {
  color: #565655;
  margin-left: 60rpx;
  font-size: 15px;
  line-height: 80rpx;
}
.list {
  box-sizing: border-box;
  margin: 0 20rpx;
  background: white;
  padding: 0 40rpx;
  border-radius: 18rpx;
}
/* cell */
.list .box {
  height: 120rpx;
  border-bottom: 2rpx solid #E8E8E8;
  display: flex;
  justify-content: space-between;
}
/* 最后一个cell不设置边框 */
.list .box:last-of-type {
  border: none;
}
/* 左 */
.list .box .left {
  height: 120rpx;
  display: flex;
  justify-content: start;
  align-items: center;
}
.list .box .left image {
  width: 38rpx;
  height: 38rpx;
}
.list .box .left text {
  margin-left: 20rpx;
  color: #101010;
  font-size: 15px;
}
/* 右 */
.list .box .right {
  height: 120rpx;
  display: flex;
  justify-content: end;
  align-items: center;
}
.list .box .right text {
  margin-left: 20rpx;
  color: #9A9A9A;
  font-size: 12px;
  margin-right: 10rpx;
}